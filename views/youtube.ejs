<!DOCTYPE html>
<html lang="he" dir="rtl">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>חיפוש יוטיוב ומועדפים</title>
</head>

<body class="bg-light">
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>שלום, <%= user.fullName %>
            </h1>
            <a href="/" class="btn btn-secondary">חזרה לבית</a>
        </div>

        <div class="card mb-5 shadow-sm">
            <div class="card-body">
                <h3 class="card-title">חיפוש סרטונים ביוטיוב</h3>
                <div class="input-group mb-3">
                    <input type="text" id="query" class="form-control" placeholder="מה תרצה לחפש?">
                    <button class="btn btn-primary" onclick="searchYouTube()">חפש</button>
                </div>
                <div id="results" class="row g-3"></div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title">הסרטונים השמורים שלי</h3>
                <div class="row g-3">
                    <% favorites.forEach(fav=> { %>
                        <div class="col-md-4">
                            <div class="card h-100">
                                <img src="<%= fav.thumbnail %>" class="card-img-top">
                                <div class="card-body">
                                    <h6 class="card-title text-truncate">
                                        <%= fav.title %>
                                    </h6>
                                    <form action="/favorites/delete/<%= fav.id %>" method="POST">
                                        <button class="btn btn-danger btn-sm w-100">מחק מהמועדפים</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script>
        const apiKey = "<%= apiKey %>";
        async function searchYouTube() {
            const q = document.getElementById('query').value;
            const resDiv = document.getElementById('results');
            // כאן יש להשתמש ב-API KEY של גוגל או ב-Scraper פשוט לצורך התרגיל

            const response = await fetch(`https://www.googleapis.com/youtube/v3/search?part=snippet&maxResults=6&q=${q}&type=video&key=${apiKey}`);
            const data = await response.json();

            resDiv.innerHTML = data.items.map(item => `
        <div class="col-md-4">
            <div class="card h-100">
                <img src="${item.snippet.thumbnails.medium.url}" class="card-img-top">
                <div class="card-body">
                    <p class="small text-truncate">${item.snippet.title}</p>
                    <form action="/favorites/add" method="POST">
                        <input type="hidden" name="videoId" value="${item.id.videoId}">
                        <input type="hidden" name="title" value="${item.snippet.title}">
                        <input type="hidden" name="thumbnail" value="${item.snippet.thumbnails.medium.url}">
                        <button class="btn btn-success btn-sm w-100">שמור למועדפים</button>
                    </form>
                </div>
            </div>
        </div>
    `).join('');
        }
    </script>
</body>

</html>